---
layout: base.njk
pagination:
  data: services
  size: 1
  alias: service
  resolve: values
permalink: "services/{{ service.href }}/index.html"
title: "{{ service.name }} - КорнеевКовка"
description: "{{ service.description }}"
---

    <div class="services-page">

        <div class="content-wrapper">
            <!-- Left Sidebar -->
            <aside class="services-sidebar">
                <nav class="services-nav">
                    {% for serviceItem in services %}
                    <a href="/services/{{ serviceItem.href }}/" 
                       class="service-link {% if serviceItem.href == service.href %}active{% endif %}">
                        {{ serviceItem.name }}
                    </a>
                    {% endfor %}
                </nav>
                
                <!-- Decorative Blacksmith Illustration -->
                <div class="blacksmith-illustration">
                   <img src="/assets/farrier-3.png" width="120" height="120" alt="Blacksmith Illustration">
                </div>
            </aside>

            <!-- Main Content Area -->
            <main class="services-content">
                <!-- Service Gallery -->
                <div class="gallery-container">
                    <div class="gallery-grid">
                        {% for image in service.galleryPaths %}
                        <div class="gallery-item">
                            <img src="{{ image.src }}" 
                                 alt="{{ service.name }} - {{ loop.index }}" 
                                 loading="lazy"
                                 width="{{ image.width }}"
                                 height="{{ image.height }}">
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </main>
        </div>
    </div>


<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Gothic', serif;
    background-color: #000;
    color: white;
    overflow-x: hidden;
}

.services-page {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    background-color: #000;
    color: white;
    position: relative;
}

/* Main Header */
.main-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background-color: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    height: 60px;
}

.main-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
    height: 100%;
    max-width: 1200px;
    margin: 0 auto;
}

.logo {
    color: white;
    text-decoration: none;
    font-family: 'Gothic', serif;
    font-size: 1.5rem;
    font-weight: bold;
    transition: color 0.3s ease;
}

.logo:hover {
    color: #FFD700;
}

.nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
}

.nav-link {
    color: white;
    text-decoration: none;
    font-family: 'Gothic', serif;
    font-size: 1rem;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.nav-link:hover {
    color: #FFD700;
}

.nav-link svg {
    transition: transform 0.3s ease;
}

.nav-link:hover svg {
    transform: rotate(180deg);
}

/* Content Layout */
.services-page {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.content-wrapper {
    display: flex;
    flex: 1;
}

/* Left Sidebar */
.services-sidebar {
    width: 280px;
    background-color: rgba(255, 255, 255, 0.05);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem 0;
    height: calc(100vh - 60px);
    overflow-y: auto;
    position: relative;
    flex-shrink: 0;
}

.services-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0 1.5rem;
}

.service-link {
    color: #ccc;
    text-decoration: none;
    padding: 1rem 1.5rem;
    border-radius: 8px;
    font-family: 'Gothic', serif;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: 1px solid transparent;
}

.service-link:hover {
    color: white;
    background-color: rgba(255, 255, 255, 0.1);
}

.service-link.active {
    color: #FFD700;
    background-color: rgba(255, 215, 0, 0.1);
    border-color: rgba(255, 215, 0, 0.3);
}

/* Main Content */
.services-content {
    flex: 1;
    padding: 2rem;
    overflow-y: auto;
    height: calc(100vh - 60px);
}



.gallery-container {
    width: 100%;
    height: 100%;
    padding: 2rem;
}

.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
}

.gallery-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 4/3;
    background-color: rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.gallery-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(255, 215, 0, 0.2);
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.gallery-item:hover img {
    transform: scale(1.05);
}

/* Blacksmith Illustration */
.blacksmith-illustration {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    z-index: 10;
    opacity: 0.8;
    transition: opacity 0.3s ease;
}

.blacksmith-illustration:hover {
    opacity: 1;
}

/* Responsive Design */
@media (max-width: 768px) {
    .content-wrapper {
        flex-direction: column;
    }
    
    .services-sidebar {
        width: 100%;
        height: auto;
        max-height: 200px;
    }
    
    .services-nav {
        flex-direction: row;
        overflow-x: auto;
        padding: 1rem;
    }
    
    .service-link {
        white-space: nowrap;
        min-width: max-content;
    }
    
    .services-content {
        flex: 1;
        padding: 1rem;
    }
    
    .gallery-container {
        padding: 1rem;
    }
    
    .gallery-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }
    
    .blacksmith-illustration {
        display: none;
    }
}

/* Loading Animation */
.gallery-item.loading {
    animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}
</style> 